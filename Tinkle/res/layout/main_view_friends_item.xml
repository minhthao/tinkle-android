<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/friend_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/pic_desc" />
    
    <ImageView 
        android:id="@+id/friend_item_events_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:paddingRight="4dp"
        android:src="@drawable/friends_list_events_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
        
    <TextView
        android:id="@+id/friend_number_of_events"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_toLeftOf="@id/friend_item_events_icon"
        android:gravity="center_vertical"
        android:textColor="#bbbbbb"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_toRightOf="@id/friend_item_icon"
        android:layout_toLeftOf="@id/friend_number_of_events"
        android:maxLines="1"
        android:textColor="#444444"
        android:textSize="15sp" />

</RelativeLayout>