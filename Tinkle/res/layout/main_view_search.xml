<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view_search_main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#434A5E"
        android:padding="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_view_search_view_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/main_view_search_activity_search_restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="3dp"
                android:src="@drawable/search_restart_icon" />

            <EditText
                android:id="@+id/main_view_search_activity_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/main_view_search_activity_search_restart"
                android:background="#00ffffff"
                android:drawableLeft="@drawable/search_icon"
                android:hint="Event Name"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#666666" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/main_view_search_activity_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>

        <View
            android:id="@+id/main_view_search_activity_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#22000000" />
    </FrameLayout>

</LinearLayout>