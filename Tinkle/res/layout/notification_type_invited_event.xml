<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/notification_type_invited_event_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/notification_list_item"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp" >

        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:contentDescription="@string/pic_desc"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp" >

            <TextView
                android:id="@+id/notification_type_invited_event_main_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Van Anh Tran lam is interested in event"
                android:textColor="#666666"
                android:textIsSelectable="false"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#22ffffff"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingTop="2dp" >

                <ImageView
                    android:id="@+id/notification_type_invited_event_sub_icon"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/pic_desc"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical"
                    android:paddingLeft="4dp" >

                    <TextView
                        android:id="@+id/notification_type_invited_event_event_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="I make one test event which suppose to be very very easy"
                        android:textColor="#666666"
                        android:textIsSelectable="false"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/notification_type_invited_event_event_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text="Thurs, 10/23/2014 at 4:00 pm"
                        android:textColor="#aaaaaa"
                        android:textIsSelectable="false"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/notification_type_invited_event_time_stamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:text="Thurs, 10/23/2014 at 4:00 pm"
                android:textColor="#aaaaaa"
                android:textIsSelectable="false"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>