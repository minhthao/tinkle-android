<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/my_event_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="#444444"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@drawable/rounded_list_item"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/my_event_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/my_event_item_icon"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:contentDescription="@string/pic_desc"
                android:padding="5dp"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/my_event_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#222222"
                    android:textIsSelectable="false"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/my_event_item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:textColor="#666666"
                    android:textIsSelectable="false"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/my_event_item_msg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="12dp"
                    android:textColor="#555555"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp" >

                    <TextView
                        android:id="@+id/my_event_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="#222222"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/my_event_item_location_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/my_event_item_time"
                        android:layout_alignParentRight="true"
                        android:textColor="#ffa000"
                        android:textIsSelectable="false"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="4dp"
            android:background="#eaeaea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/rounded_list_item_bottom_view_unhover"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/my_event_item_share_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_list_item_bottom_left"
                android:clickable="true"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/event_share_button_icon"
                    android:drawablePadding="5dp"
                    android:duplicateParentState="true"
                    android:padding="8dp"
                    android:text="Share"
                    android:textColor="@color/event_button_text_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/my_event_item_separator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/tabbar_separator" />

            <LinearLayout
                android:id="@+id/my_event_item_more_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_list_item_bottom_right"
                android:clickable="true"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/event_more_button_icon"
                    android:drawablePadding="5dp"
                    android:duplicateParentState="true"
                    android:padding="8dp"
                    android:text="Detail"
                    android:textColor="@color/event_button_text_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>