<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_photo_album_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b2b2b2" >

    <ImageView
        android:id="@+id/event_photo_album_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/icon_img_desc"
        android:scaleType="fitCenter"
        android:src="@drawable/no_cover" 
        android:clickable="false"/>

    <TextView
        android:id="@+id/event_photo_album_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="top|center"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="15sp" 
        android:clickable="false"/>
    
     <TextView
        android:id="@+id/event_photo_album_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="50dp"
        android:layout_margin="10dp"
        android:layout_gravity="bottom|left"
        android:shadowColor="#ffffff"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:textStyle="italic" 
        android:clickable="false"
        android:scrollbars="vertical"/>

   

</FrameLayout>